<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/alliance_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/alliancebackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alliance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="StarBucks"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alliance_content"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/alliancetextbackground"
            android:gravity="center"
            android:text="아메리카노 1잔 무료"
            android:textColor="@color/theme"
            android:textSize="9sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/map_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/map" />

</RelativeLayout>